---
title: The blog
subtitle: No homepage, yet.
date: 2018-08-22 12:24:50
layout: layouts/base.njk
#templateEngineOverride: njk
---
{%- set siteConfig = siteConfig.siteInformation -%}
<div class="embl-grid ">
  <div>
    <h1 class="vf-text-heading--1">{{title}}</h1>
  </div>
  <section>
  {%- for post in collections.posts | sort(true, true, attribute='date' ) -%}
  <article class="vf-summary vf-summary--news">
    <span class="vf-summary__date">{{ post.date | dateDisplay }}</span>
    <a class="vf-summary__image" href="{{ post.url | url}}">
      <img class="vf-summary__image" src="/images/crop-cinema{{ post.data.image | url }}" alt="{{ post.data.teaser }}" />
    </a>
    <h3 class="vf-summary__title">
      <a href="{{ post.url | url}}" class="vf-summary__link">{{ post.data.title }}</a>
    </h3>
    <p class="vf-summary__text">{{ post.data.teaser | safe }}</p>
  </article>
  {%- endfor -%}
  </section>
</div>
